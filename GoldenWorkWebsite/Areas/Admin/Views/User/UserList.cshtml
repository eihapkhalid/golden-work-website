@model AdminViewModel;
<div class="card-body">
    <div class="row">
        <div class="table-sorter-wrapper col-lg-12 table-responsive">
            <a asp-area="admin" asp-controller="User" asp-action="userEdit" type="button" value="New" class="btn btn-gradient-primary btn-rounded btn-fw" >New</a>
            <table id="order-listing" class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th class="sortStyle">UserName<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">UserPassword<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">UserEmail<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">UserRole<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">UserCreateTime<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">UserUpdateTime<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">UserCurrentState<i class="mdi mdi-chevron-down"></i></th>
                    <th ></th>

                </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 0;
                        foreach (var user in Model.LesTbUsers)
                        {
                            counter++;
                                    <tr>
                                        <td>@counter</td>
                                        <td>@user.UserName</td>
                                        <td>@user.UserPassword</td>
                                        <td>@user.UserEmail</td>
                                        <td>@user.UserRole</td>
                                        <td>@user.UserCreateTime</td>
                                        <td>@user.UserUpdateTime</td>
                                        <td>@user.UserCurrentState</td>
                                        <td>
                                            <a asp-area="admin" asp-controller="User" asp-action="UserEdit"   asp-route-userid="@user.UserID "  type="button" value="Edit" class="btn btn-gradient-info btn-rounded btn-fw" >    Edit</a> 
                                            <a asp-area="admin" asp-controller="User" asp-action="userDelete" asp-route-userid="@user.UserID "  type="button" value="Delete" class="btn btn-gradient-danger btn-rounded btn-fw" >Delete</a>
                                        </td>
                                    </tr>
                        }
                    }       
                 </tbody>
             </table>
        </div>    
    </div>
 </div>



