@model AdminViewModel

<div class="container-fluid page-body-wrapper">
     <div class="main-panel">
        <div class="content-wrapper">
            <div class="card-body">
                <h4 class="card-title">Default form</h4>
                <p class="card-description"> Basic form layout </p>
                <form class="form-inline repeater" class="forms-sample" method="post" enctype="multipart/form-data" class="form-inline repeater"
                    asp-controller="service" asp-action="ServiceSave" role="form">
                    <!--------------------- hidden Files -------------------------->

                    <input asp-for="@Model.inpTbService.ServiceID" type="hidden"/>
                    <input asp-for="@Model.inpTbService._TbUser.UserID" type="hidden"/>
                    <!-------------------- end hidden Files ----------------------->

                    <!-------------------- start TbUsers form --------------------->
                    
                    <div class="form-group">
                    <label >ServiceName</label>
                    <input type="text" class="form-control"  placeholder="UserName"
                            asp-for="@Model.inpTbService.ServiceName" maxlength="50">
                    <span  asp-validation-for="@Model.inpTbService.ServiceName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label >ServiceTitle</label>
                    <input type="text" class="form-control"  placeholder="UserPassword"
                            asp-for="@Model.inpTbService.ServiceTitle" maxlength="50">
                    <span  asp-validation-for="@Model.inpTbService.ServiceTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label >ServicePrice</label>
                    <input type="number" class="form-control"  placeholder="Branch Number"
                            asp-for="@Model.inpTbService.ServicePrice" maxlength="20">
                    <span  asp-validation-for="@Model.inpTbService.ServicePrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label >ServiceCurrentlyFeatured</label>
                    <input type="number" class="form-control"  placeholder="Branch Number"
                            asp-for="@Model.inpTbService.ServiceCurrentlyFeatured" maxlength="50">
                    <span  asp-validation-for="@Model.inpTbService.ServiceCurrentlyFeatured" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label >ServiceImage</label>
                    <input type="text" class="form-control"  placeholder="UserRole"
                            asp-for="@Model.inpTbService.ServiceImage" maxlength="50">
                    <span  asp-validation-for="@Model.inpTbService.ServiceImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <label >ServiceImage</label>
                    <input type="text" class="form-control"  placeholder="UserRole"
                            asp-for="@Model.inpTbService.ServiceDescription" maxlength="50">
                    <span  asp-validation-for="@Model.inpTbService.ServiceDescription" class="text-danger"></span>
                    </div>
                    <!-------------------- start TbUsers form --------------------->
                    <button type="submit" formmethod="post"  class="btn btn-gradient-primary me-2">Submit</button>
                    <button  class="btn btn-light">Cancel</button>
               </form>
             </div>
         </div>
     </div>
</div>

