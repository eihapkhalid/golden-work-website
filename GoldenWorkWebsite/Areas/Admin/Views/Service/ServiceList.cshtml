@model AdminViewModel;
<div class="card-body">
    <div class="row">
        <div class="table-sorter-wrapper col-lg-12 table-responsive">
            <a asp-area="admin" asp-controller="Service" asp-action="ServiceEdit" type="button" value="New" class="btn btn-gradient-primary btn-rounded btn-fw" >New</a>
            <table id="order-listing" class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th class="sortStyle">ServiceName<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">ServiceTitle<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">ServicePrice<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">ServiceCurrentlyFeatured<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">ServiceImage<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">UserCreateTime<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">UserUpdateTime<i class="mdi mdi-chevron-down"></i></th>
                    <th class="sortStyle">UserName<i class="mdi mdi-chevron-down"></i></th>
                    <th ></th>

                </tr>
                </thead>
                <tbody>
                    @{
                        int counter = 0;
                        foreach (var service in Model.LesTbServices)
                        {
                            counter++;
                                            <tr>
                                                <td>@counter</td>
                                                <td>@service.ServiceName</td>
                                                <td>@service.ServiceTitle</td>
                                                <td>@service.ServicePrice</td>
                                                <td>@service.ServiceCurrentlyFeatured</td>
                                                <td>@service.ServiceImage</td>
                                                <td>@service.UserCreateTime</td>
                                                <td>@service.UserUpdateTime</td>
                                                <td>@service._TbUser.UserName</td>
                                                <td>
                                                    <a asp-area="admin" asp-controller="service" asp-action="ServiceEdit"   asp-route-serviceid="@service.ServiceID "  type="button" value="Edit" class="btn btn-gradient-info btn-rounded btn-fw" >    Edit</a> 
                                                    <a asp-area="admin" asp-controller="service" asp-action="ServiceDelete" asp-route-serviceid="@service.ServiceID "  type="button" value="Delete" class="btn btn-gradient-danger btn-rounded btn-fw" >Delete</a>
                                                </td>
                                            </tr>
                        }
                    }       
                 </tbody>
             </table>
        </div>    
    </div>
 </div>



