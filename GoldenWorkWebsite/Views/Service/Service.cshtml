@model IndexViewModel;

    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 p-0" style="background-image: url(../img/carousel-bg-2.jpg);">
        <div class="container-fluid page-header-inner py-5">
            <div class="container text-center">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Services</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center text-uppercase">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">Pages</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Services</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

<!-- Service Start -->
<div class="container-xxl py-5" dir="rtl">
    <div class="container">
        <div class="row g-4">
            @{
                int x = 0;
            }
            @foreach (var service in Model.lstTbServices)
            {
                string ClassValue = "";
                x++;
                if (x == 2)
                {
                    ClassValue = "d-flex bg-light py-5 px-4";
                }
                else
                {
                    ClassValue = "d-flex py-5 px-4";
                }
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="@ClassValue">
                            <i class="fa fa-certificate fa-3x text-primary flex-shrink-0"></i>
                            <div class="ps-4">
                                <h5 class="mb-3">@service.ServiceName</h5>
                                <p>@service.ServiceDescription</p>
                                <a class="text-secondary border-bottom" href="">المزيد</a>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>
<!-- Service End -->

<!-- About Start -->
<div class="container-xxl py-5" dir="rtl">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 pt-4" style="min-height: 400px;">
                <div class="position-relative h-100 wow fadeIn" data-wow-delay="0.1s">
                    <img class="position-absolute img-fluid w-100 h-100" src="img/about.jpg" style="object-fit: cover;" alt="">
                    <div class="position-absolute top-0 end-0 mt-n4 me-n4 py-4 px-5" style="background: rgba(0, 0, 0, .08);">
                        @foreach (var about in Model.lstTbAbouts)
                        {                   
                            <h1 class="display-4 text-white mb-0">@about.AboutYearsExperience <span class="fs-4">سنوات</span></h1>
                            <h4 class="text-white">خبرة</h4>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                @foreach (var about in Model.lstTbAbouts)
                {  
                    <h1 class="mb-4"><span class="text-primary">مؤسسة العمل الذهبي</span> @about.AboutCompanyTitle</h1>
                    <p class="mb-4">@about.AboutCompanyDescription</p>
                }
                <div class="row g-4 mb-3 pb-3">
                    <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
                        @foreach (var service in Model.lstTbServices)
                        {
                            <div class="d-flex">
                                <div class="bg-light d-flex flex-shrink-0 align-items-center justify-content-center mt-1" style="width: 45px; height: 45px;">
                                    <span class="fw-bold text-secondary">@service.ServiceID 0</span>
                                </div>
                                <div class="ps-3">
                                    <h6>@service.ServiceTitle</h6>
                                    <span>@service.ServiceDescription</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <a href="" class="btn btn-primary py-3 px-5"><i class="fa fa-arrow-right ms-3"></i>اقرأ المزيد</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
@section Scripts
    {
        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="lib/wow/wow.min.js"></script>
        <script src="lib/easing/easing.min.js"></script>
        <script src="lib/waypoints/waypoints.min.js"></script>
        <script src="lib/counterup/counterup.min.js"></script>
        <script src="lib/owlcarousel/owl.carousel.min.js"></script>
        <script src="lib/tempusdominus/js/moment.min.js"></script>
        <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
        <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

        <!-- Template Javascript -->
        <script src="js/main.js"></script>
    }