@model IndexViewModel

<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(../img/carousel-bg-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center">
            <h1 class="display-3 text-white mb-3 animated slideInDown">من نحن</h1>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- About Start -->
<div class="container-xxl py-5" dir="rtl">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 pt-4" style="min-height: 400px;">
                <div class="position-relative h-100 wow fadeIn" data-wow-delay="0.1s">
                    <img class="position-absolute img-fluid w-100 h-100" src="img/about.jpg" style="object-fit: cover;" alt="">
                    <div class="position-absolute top-0 end-0 mt-n4 me-n4 py-4 px-5" style="background: rgba(0, 0, 0, .08);">
                        @foreach (var about in Model.lstTbAbouts)
                        {                   
                            <h1 class="display-4 text-white mb-0">@about.AboutYearsExperience <span class="fs-4">سنوات</span></h1>
                            <h4 class="text-white">خبرة</h4>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                @foreach (var about in Model.lstTbAbouts)
                {  
                    <h1 class="mb-4"><span class="text-primary">مؤسسة العمل الذهبي</span> @about.AboutCompanyTitle</h1>
                    <p class="mb-4">@about.AboutCompanyDescription</p>
                }
                <div class="row g-4 mb-3 pb-3">
                    <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
                        @foreach (var service in Model.lstTbServices)
                        {
                            <div class="d-flex">
                                <div class="bg-light d-flex flex-shrink-0 align-items-center justify-content-center mt-1" style="width: 45px; height: 45px;">
                                    <span class="fw-bold text-secondary">@service.ServiceID 0</span>
                                </div>
                                <div class="ps-3">
                                    <h6>@service.ServiceTitle</h6>
                                    <span>@service.ServiceDescription</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <a href="" class="btn btn-primary py-3 px-5"><i class="fa fa-arrow-right ms-3"></i>اقرأ المزيد</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->

<!-- Fact Start -->
<div class="container-fluid fact bg-dark my-5 py-5" dir="rtl">
    <div class="container">
        <div class="row g-4">
            @foreach (var about in Model.lstTbAbouts)
            {
                <div class="col-md-6 col-lg-3 text-center wow fadeIn" data-wow-delay="0.1s">
                    <i class="fa fa-check fa-2x text-white mb-3"></i>
                    <h2 class="text-white mb-2" data-toggle="counter-up">@about.AboutYearsExperience</h2>
                    <p class="text-white mb-0">سنوات الخبرة</p>
                </div>
                <div class="col-md-6 col-lg-3 text-center wow fadeIn" data-wow-delay="0.3s">
                    <i class="fa fa-users-cog fa-2x text-white mb-3"></i>
                    <h2 class="text-white mb-2" data-toggle="counter-up">@Model.lstTbTechnician.Count()</h2>
                    <p class="text-white mb-0">فريق متخصص</p>
                </div>
                <div class="col-md-6 col-lg-3 text-center wow fadeIn" data-wow-delay="0.5s">
                    <i class="fa fa-users fa-2x text-white mb-3"></i>
                    <h2 class="text-white mb-2" data-toggle="counter-up">@Model.lstTbCustomerReviews.Count()</h2>
                    <p class="text-white mb-0">عملاء راضون</p>
                </div>
                <div class="col-md-6 col-lg-3 text-center wow fadeIn" data-wow-delay="0.7s">
                    <i class="fa fa-car fa-2x text-white mb-3"></i>
                    <h2 class="text-white mb-2" data-toggle="counter-up">@about.AboutCompletedProjects</h2>
                    <p class="text-white mb-0">مشاريع مكتملة</p>
                </div>
            }
        </div>
    </div>
</div>
<!-- Fact End -->

@section Scripts
    {
                <!-- JavaScript Libraries -->
                <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
                <script src="~/lib/wow/wow.min.js"></script>
                <script src="~/lib/easing/easing.min.js"></script>
                <script src="~/lib/waypoints/waypoints.min.js"></script>
                <script src="~/lib/counterup/counterup.min.js"></script>
                <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
                <script src="~/lib/tempusdominus/js/moment.min.js"></script>
                <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
                <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

                <!-- Template Javascript -->
                <script src="~/js/main.js"></script>
}